<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="705.0" prefWidth="1020.0" style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e2e8f0);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.timeclock.ClockWiseController">

    <!-- ===== TOP NAVBAR ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets bottom="15" left="25" right="25" top="15" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="12">
                <ImageView fx:id="logo" fitHeight="36" fitWidth="36" />
                <Label prefHeight="29.0" prefWidth="132.0" style="-fx-text-fill: #1e293b; -fx-font-size: 24px; -fx-font-weight: bold;" text="ClockWise" />
            </HBox>
            <Pane HBox.hgrow="ALWAYS">
            <children>
               <Label layoutX="230.0" layoutY="5.0" style="-fx-text-fill: #1e293b; -fx-font-size: 24px; -fx-font-weight: bold;" text="User Name" />
            </children></Pane> <!-- Spacer -->
            <Button fx:id="logoutBtn" style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-font-weight: 600; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;" text="Logout" />
        </HBox>
    </top>

    <!-- ===== CENTER MAIN CONTENT ===== -->
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 40;">
            <!-- Current Time Display -->
            <VBox alignment="CENTER" spacing="8">
                <Label style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-weight: 600; -fx-letter-spacing: 1px;" text="CURRENT TIME" />
                <Label fx:id="timeLabel" style="-fx-text-fill: #1e293b; -fx-font-size: 64px; -fx-font-weight: 300; -fx-font-family: 'System';" text="00:00:00 PM" />
                <Label fx:id="dateLabel" style="-fx-text-fill: #475569; -fx-font-size: 16px; -fx-font-weight: 500;" text="Monday, March 17, 2025" />
            </VBox>

            <!-- Action Buttons -->
            <VBox alignment="CENTER" spacing="15">
                <HBox alignment="CENTER" spacing="16">
                    <Button fx:id="clockInBtn" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 24; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.3), 10, 0, 0, 4); -fx-cursor: hand;" text="CLOCK IN" />
                    <Button fx:id="clockOutBtn" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 24; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(239, 68, 68, 0.3), 10, 0, 0, 4); -fx-cursor: hand;" text="CLOCK OUT" />
                    <Button fx:id="mealBtn" style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 24; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(245, 158, 11, 0.3), 10, 0, 0, 4); -fx-cursor: hand;" text="MEAL BREAK" />
                </HBox>
                <Label fx:id = "todayHoursLabel" style="-fx-text-fill: #475569; -fx-font-size: 14px; -fx-font-weight: 600; -fx-background-color: #f1f5f9; -fx-padding: 8 16; -fx-background-radius: 20;" text="Today: 0h 0m" />
            </VBox>

            <!-- Recent Entries Card -->
            <VBox maxWidth="800" spacing="16" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 5);">
                <HBox alignment="CENTER_LEFT">
                    <Label style="-fx-text-fill: #1e293b; -fx-font-size: 18px; -fx-font-weight: bold;" text="Recent Time Entries" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id = "viewAllBtn" style="-fx-background-color: transparent; -fx-text-fill: #3b82f6; -fx-font-weight: 600; -fx-underline: true; -fx-cursor: hand;" text="VIEW ALL" />
                </HBox>
                <TableView fx:id="timeTable" prefHeight="220" style="-fx-background-color: transparent; -fx-border-color: #e2e8f0; -fx-border-radius: 8;">
                    <columnResizePolicy>
       					 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    				</columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colDate" prefWidth="120" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="DATE" />
                        <TableColumn fx:id="colAction" prefWidth="180" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="ACTION" />
                        <TableColumn fx:id="colTime" prefWidth="120" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="TIME" />
                        <TableColumn fx:id="colDuration" prefWidth="120" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="DURATION" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ===== BOTTOM FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1e293b; -fx-padding: 20;">
            <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;" text="Â© 2025 ClockWise | Time Tracking System | v2.1.0" />
        </HBox>
    </bottom>
</BorderPane>
