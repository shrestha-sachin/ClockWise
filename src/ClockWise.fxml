<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.timeclock.ClockWiseController"
      alignment="CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: transparent;">

    <VBox alignment="CENTER" spacing="5">
        <Label text="CURRENT TIME" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold; -fx-letter-spacing: 2px;"/>
        <Label fx:id="timeLabel" text="00:00:00 PM" style="-fx-text-fill: #1e293b; -fx-font-size: 56px; -fx-font-weight: 300;"/>
        <Label fx:id="dateLabel" text="Date" style="-fx-text-fill: #475569; -fx-font-size: 16px;"/>
        <Label fx:id="userNameLabel" text="Hello, User" style="-fx-text-fill: #3b82f6; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
    </VBox>

    <Separator maxWidth="300"/>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="clockInBtn" text="▶ CLOCK IN" 
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.4), 10, 0, 0, 3); -fx-cursor: hand;"/>
        
        <Button fx:id="mealBtn" text="☕ MEAL BREAK" 
                style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(245,158,11,0.4), 10, 0, 0, 3); -fx-cursor: hand;"/>
        
        <Button fx:id="clockOutBtn" text="⏹ CLOCK OUT" 
                style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(239,68,68,0.4), 10, 0, 0, 3); -fx-cursor: hand;"/>
    </HBox>

    <Label fx:id="todayHoursLabel" text="Today: 0h 0m" 
           style="-fx-background-color: #e2e8f0; -fx-text-fill: #475569; -fx-padding: 5 15; -fx-background-radius: 20; -fx-font-weight: bold;"/>

    <VBox maxWidth="700" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
        <Label text="Today's Activity" style="-fx-font-weight: bold; -fx-text-fill: #334155;"/>
        <TableView fx:id="timeTable" prefHeight="200" style="-fx-background-color: transparent;">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn fx:id="colDate" text="Date"/>
                <TableColumn fx:id="colAction" text="Action"/>
                <TableColumn fx:id="colTime" text="Time"/>
                <TableColumn fx:id="colDuration" text="Duration"/>
            </columns>
        </TableView>
    </VBox>
</VBox>